<div id="alinhaTabela">
  <br>
  <div class="row">
    <%= image_tag("/img/agenda.png") %>
    <div style="margin-top: 40px">
      <h1 id="p"> Agenda Paciente <%= @p["name"] %></h1>
    </div>
  </div>
  <br>

  <table class="table">
    <thead>
      <tr>
        <th>DATA - HORA</th>
        <th>STATUS</th>
        <th>OBSERVAÇÃO</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @agenda_paciente.each do |query| %>
      <tr>
        <td><%= query.date.strftime("%d/%m/%Y - %H:%M") %> </td>
        <td><%= query.status %></td>
        <td><%= query.note %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Voltar ao menu', root_path, class: "btn btn-primary" %> <br><br>
</div>
