
<%= simple_form_for(@specialist) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome:", input_html: { class: 'class="form-group col-lg-6'}%>
    <%= f.input :phone, label: "Telefone", input_html: { class: 'class="form-group col-lg-6'} %>
    <%= f.association :specialty, label: "Especialidade", input_html: { class: 'class="form-group col-lg-6'}%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Cadastrar', class: 'btn btn-success' %>
    <%= link_to 'Voltar', specialists_path, class: 'btn btn-primary'%>
  </div>
<% end %>
