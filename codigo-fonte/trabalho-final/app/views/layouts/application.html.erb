<!DOCTYPE html>
<html>
<head>
  <title>ViverBem Clinic</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #2E6171">
    <div style="margin-left: 100px"><a class="navbar-brand" href="/">ViverBem Clinic</a> </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      </ul>
      <ul class="nav navbar-brand">
        <li>
          <% if user_signed_in? %>
            <%= link_to edit_user_registration_path, :class => "btn btn-outline-info" do %> <%= "#{current_user.name}" %> <% end %>
            <%= link_to destroy_user_session_path, method: :delete do %>
             <img class="img-responsive img-rounded" src="/img/logout.png" alt="" style="width: 30px; height: 30px">
            <% end %>
        </li>
      </ul>
      <ul class="nav navbar-brand">
        <li >
          <% else %>
            <%= link_to new_user_registration_path do %>
              <img class="img-responsive img-rounded" src="/img/register.png" alt="" style="width: 30px; height: 30px;">
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Exibe mensagens informativas ao usuÃ¡rio, vindo da devise.en.yml -->
  <% if notice %> <div class="alert alert-info"><%= notice %></div> <% end %>
  <% if alert %> <div class="alert alert-warning"><%= alert %></div> <% end %>
  <% if flash[:error] %> <div class="alert alert-danger"><%= flash[:error] %></div> <% end %>

  <%= yield %>
</body>
</html>
