<%= simple_form_for(@patient) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :name, label: false, input_html: { class: 'class="form-group col-lg-6', placeholder: "Nome" }%>
  <%= f.input :cpf, label: false, input_html: { class: 'class="form-group col-lg-3', placeholder: "CPF" }%>
  <%= f.input :age, label: false, end_year: Date.today.year - 100, start_year: Date.today.year%>
  <%= f.input :telefone, label: false, input_html: { class: 'class="form-group col-lg-3', placeholder: "Telefone" }%>
  <%= f.input :email, label: false, input_html: { class: 'class="form-group col-lg-5', placeholder: "E-mail" }%>
  <%= f.input :address, label: false, input_html: { class: 'class="form-group col-lg-5', placeholder: "Endereço" }%>
  <%= f.input :profession, label: false, input_html: { class: 'class="form-group col-lg-3', placeholder: "Profissão" }%>
</div>

<div class="form-actions">
  <%= f.button :submit, "Cadastrar", class: 'btn btn-success' %>
  <%= link_to 'Voltar', patients_path, class: 'btn btn-primary' %>
</div>
<br>

<% end %>
